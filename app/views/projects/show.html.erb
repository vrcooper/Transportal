<h2><%= @project.name %></h2>

<table class = "table table-bordered table-striped">
  <thread>
    <tr>
      <th>File Name</th>
      
        <th>Download Attachment</th>
        <th> </th>
      
    </tr>
  </thread>

<tbody>
    <% @documents.each do |document| %>

    <tr>
      <td><%= link_to document.name, new_document_path(@document) %></td>
      
      <td><%= link_to "Download Attachment", document.attachment_url %></td>
      <td><%= button_to "Delete", [@project, document], method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{document.name}?" %></td>
    </tr>
    
  <% end %>
</tbody>

</table>

<%= render partial: 'documents/form', locals: {document: Document.new, project: @project} %>